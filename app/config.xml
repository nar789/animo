<?xml version='1.0' encoding='utf-8'?>
<widget id="hume.app.soul" version="1.0.6" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>성찰일기</name>
    <description>
        2016.
    </description>
    <author email="tony92511@hanmail.net" href="http://hume.co.kr">
        HUME Team.
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
	<preference name="orientation" value="portrait" />
	<preference name="SplashScreenDelay" value="2000" />
	<preference name="ShowSplashScreenSpinner" value="false"/>
	<preference name="SplashShowOnlyFirstTime" value="false" />
	<preference name="StatusBarBackgroundColor" value="#38a298" />
</widget>
